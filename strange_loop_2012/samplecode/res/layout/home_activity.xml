<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >
  <Button
      android:id="@+id/locations_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:text="@string/locations"
      />
  <TextView
      android:id="@+id/otto_help"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_toRightOf="@+id/locations_button"
      android:layout_marginLeft="8dp"
      android:layout_alignTop="@id/locations_button"
      android:gravity="left"
      android:text="@string/otto_help"
      />
  <Button
      android:id="@+id/account_button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@id/locations_button"
      android:layout_alignRight="@id/locations_button"
      android:layout_marginTop="8dp"
      android:text="@string/account"
      />
  <TextView
      android:id="@+id/producer_help"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="left"
      android:layout_alignParentRight="true"
      android:layout_toRightOf="@id/account_button"
      android:layout_marginLeft="8dp"
      android:layout_alignTop="@id/account_button"
      android:text="@string/producer_help"
      />
</RelativeLayout>